<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>  
    <class name="com.ideas2it.employee.model.Trainer" table="trainer" > 
        <id name = "trainerId" column = "Trainer_id">
            <generator class="native"></generator>
        </id>
        <property name = "experience" column = "experience"></property> 
        <many-to-one name = "employee" class = "com.ideas2it.employee.model.Employee"
            not-null="true" column="E_Id" unique="true" cascade = "all">
	</many-to-one>
        <set name = "trainees" table = "employee_relation" inverse = "false" lazy = "true" 
            fetch = "select" cascade = "save-update">
        <key column = "trainer_id" />
        <many-to-many class = "com.ideas2it.employee.model.Trainee" 
            column = "trainee_id" fetch = "join" />
        </set>
    </class>  
</hibernate-mapping>